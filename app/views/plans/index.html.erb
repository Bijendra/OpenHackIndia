        <ul class="overview">
            <li id="hotels"></li>
            <li id="buses"><%= render "rerandomize_buses" %></li>
            <li id="flights"><h2>Departure</h2><div id="dep"></div><div style="clear:both"></div><h2>Arrival</h2><div id="arr"></div></li>
            <li id="places">tab four</li>
            <li id="restaurants"></li>
        </ul>
    </div>
    <a href="#" class="buttons next">right</a>
</div>
